generator client {
    provider = "prisma-client-js"   
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Update Database Table : npx prisma db push
model User {
    id          String  @id @default(cuid())
    password    String
    name        String
    email       String  @unique
    address1    String
    address2    String
    photo       String  // Blob

}

model Seller {
    id          String @id @default(cuid())
    name        String
    email       String @unique
    password    String
    product     Product[]
    company     Company @relation(fields: [companyId], references: [id])
    companyId   String
}

model Company {
    id          String @id @default(cuid())
    name        String
    contract    String
    address     String
    seller      Seller[]

}

model ComCode {
    key1 String @id
    ket2 String @unique
    value String
}


model Product {
    id      String  @id @default(cuid())
    name    String
    photo   String
    cost    Int
    promo   Int
    category1 String
    category2 String
    category3 String
    seller Seller @relation(fields: [sellerid], references: [id])
    sellerid String

}




